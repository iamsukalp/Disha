<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="24dp"
        android:background="@drawable/feed_bg"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/feed_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="120dp"
            android:layout_height="80dp"/>

        <TextView
            app:layout_constraintStart_toEndOf="@id/feed_image"
            android:id="@+id/feed_header"
            app:layout_constraintTop_toTopOf="@id/feed_image"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="Header"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/feed_date"
            app:layout_constraintTop_toBottomOf="@id/feed_header"
            app:layout_constraintStart_toStartOf="@id/feed_header"
            android:text="25th March"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>