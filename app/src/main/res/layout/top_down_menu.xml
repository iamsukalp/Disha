<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/menu_profileIV"
        android:layout_width="80dp"
        android:transitionName="profile_image"
        android:layout_height="80dp"
        android:src="@drawable/ic_profile_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/menu_aspirantName"
        app:layout_constraintStart_toEndOf="@id/menu_profileIV"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/menu_profileIV"
        android:textColor="@color/white"
        android:text="name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/menu_aspirantEmail"
        app:layout_constraintStart_toEndOf="@id/menu_profileIV"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/menu_aspirantName"
        android:layout_marginTop="6dp"
        android:text="email"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/menu_aspirantPhone"
        app:layout_constraintStart_toEndOf="@id/menu_profileIV"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@id/menu_profileIV"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        android:text="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/menu_status"
        app:layout_constraintStart_toStartOf="@id/menu_profileIV"
        app:layout_constraintTop_toBottomOf="@id/menu_profileIV"
        android:layout_marginTop="16dp"
        android:text="Aspirant"
        android:textColor="@color/orange_light"
        android:background="@drawable/status_bg_aspirant"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/menu_settings"
        android:text="Settings"
        android:textColor="@color/primary_text"
        android:drawableStart="@drawable/ic_setting"
        android:drawableTint="@color/primary_text"
        android:drawablePadding="6dp"
        app:layout_constraintStart_toStartOf="@id/menu_status"
        app:layout_constraintTop_toBottomOf="@id/menu_status"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/menu_resume_status"
        app:layout_constraintStart_toStartOf="@id/menu_status"
        app:layout_constraintTop_toBottomOf="@id/menu_settings"
        android:drawableStart="@drawable/ic_warning"
        android:drawableTint="@color/primary_color"
        android:textSize="10sp"
        android:layout_marginTop="56dp"
        android:drawablePadding="6dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:textColor="@color/primary_color"
        android:text="You haven't uploaded your resume yet, please do so before your interview"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>